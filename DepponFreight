# encoding: GBK

puts "请输入箱数"
ctn = gets.to_i
weight = 14.55
cbm = 0.6 * 0.45 * 0.25
value = 0.17
num = 1020 * 4

zongzhongliang = weight * ctn
zongtiji = cbm * ctn

zhongliangqian = zongzhongliang * 

1.04
tijiqian = zongtiji * 218.4

if zhongliangqian > tijiqian
  freight = zhongliangqian
else
  freight = tijiqian
end

truefreight = format("%.2f", 

freight.to_f/3)

warehouse = 0.2 * zhongliangqian
if warehouse > 500
  warehouse = 500
end
if warehouse < 55
  warehouse = 55
end
truewarehouse = format("%.2f", 

warehouse.to_f/3)

huokuan = value * num
insurance = huokuan * ctn * 0.006
insurancePerCtn = huokuan * 0.006
trueinsurance = format("%.2f", 

insurance.to_f/3)

total = freight + warehouse + 

insurance
truetotal = format("%.2f", 

total.to_f/3)
average = total / zongtiji
trueaverage = format("%.2f", 

average.to_f/3)


puts "#{ctn}箱的总运费是#{truetotal}

元
（核每立方米#{trueaverage}元）
其中运费#{truefreight}元
保险#{trueinsurance}元
保管与配送费#{truewarehouse}元"
