# 第七题

def sum_array(nums1, nums2)
  result = []
	i = 0
	n =	(nums1.length > nums2.length) ? nums1.length : nums2.length	#多余的
	while i < n
	  result << nums1[i] + nums2[i]
		i += 1
	end
	return result
end

p sum_array([1, 2, 3], [4, 6, 8])
