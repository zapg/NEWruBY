# 第一题

a1 = Array.new

n = 0
while n < 100
  n = n + 1
	a1 << n
end

a0 = a1



# 第二题

a = a0
i = 0
a2 = [] 
while i < a.length
  a2 << a[i] * 100
	i = i + 1
end

#或

a = a0

a2 = a.collect{|item| item * 100}
a.collect{|item| item * 100}



# 第三题

